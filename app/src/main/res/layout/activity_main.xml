<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:orientation="vertical">

    <!-- ScrollView 내부는 반드시 하나의 자식만! -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 교수 항목들을 묶는 LinearLayout -->
        <LinearLayout
            android:id="@+id/professor_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 예시 1 -->
            <LinearLayout
                android:id="@+id/professor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이완범 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 2 -->
            <LinearLayout
                android:id="@+id/professor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="오강한 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 3 -->
            <LinearLayout
                android:id="@+id/professor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이영효 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 4 -->
            <LinearLayout
                android:id="@+id/professor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="고성현 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 5 -->
            <LinearLayout
                android:id="@+id/professor5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#E8F5E9"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="박혁규 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 6 -->
            <LinearLayout
                android:id="@+id/professor6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFF3E0"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="정성태 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 7 -->
            <LinearLayout
                android:id="@+id/professor7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#E3F2FD"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이창목 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

            <!-- 예시 8 -->
            <LinearLayout
                android:id="@+id/professor8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FCE4EC"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="홍예린 교수님"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/starButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/idonlike"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="idonlike" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/alertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈" />
    </LinearLayout>
</LinearLayout>
